template(name='Profile')
  if currentUser
    .col-xs-12
        .col-xs-12.profile-wrapper
          .col-xs-12.profile-item
            .col-xs-12.profile-data
              .col-xs-12.col-md-3.profile-picture
                .col-xs-12.pic-container
                  img.img.img-responsive(src=avatar)
              .col-xs-12.col-md-9.profile-info
                .row
                  .col-xs-12.col-md-9
                    .col-xs-12.username 
                      i.fa.fa-user
                      #username=profile.nickname
                    .col-xs-12.email
                        i.fa.fa-envelope
                        | #{myEmail}
                    .col-xs-12.favorites
                      i.fa.fa-heart
                      | Favorites:
                      span.fav-number=favorites
                  .col-xs-12.col-md-3
                    .col-xs-12
                      .col-xs-12.editProfile.profile-menu-item(data-target="#editProfile") Edit Profile
                    .col-xs-12
                      .col-xs-12.logOut Log Out
              if isInRole "Admin"
                .col-xs-12.profile-menu
                  .col-xs-12.col-md-6
                    .col-xs-12.profile-menu-item(data-target="#editCompanies") Edit Companies
                  .col-xs-12.col-md-6
                    .col-xs-12.profile-menu-item(data-target="#editRights") Edit Users Rights

      .col-xs-12
        .col-xs-12
          .col-xs-12.changerMenu
            .col-xs-12.changerMenu-item#editProfile
              .col-xs-12 Edit Profile
              .col-xs-12 Username
              .col-xs-12 Profile Picture
            if isInRole "Admin"
              .col-xs-12.changerMenu-item#editCompanies.active
                .col-xs-12.col-lg-3
                  h4.text-center Add Companies
                  hr
                  +quickForm(collection="Symbols" type="insert" id="addSymbol" buttonContent="Insert")
                .col-xs-12.col-lg-9
                  h4.text-center Edit Companies
                  hr
                  table.table
                    thead
                      tr
                        th Symbol
                        th Company
                        th Option
                    tbody.companiesTable
                      each companies
                        tr
                          td=symbol
                          td=company
                          td.showEditable Edit
                        tr(id=symbol,class="company hide")
                          +autoForm(collection="Symbols" doc=this id=symbol type="update" buttonContent="Update")
                            +afQuickFields
                            button.btn.btn-primary Update
                            +quickRemoveButton(collection="Symbols" _id=this._id class="btn btn-danger")
              .col-xs-12.changerMenu-item#editRights

              
     
  else
    .col-xs-12.col-md-10.col-md-offset-1
      .col-xs-12
        .col-xs-12.col-md-6.col-md-offset-3
          +atForm


    
